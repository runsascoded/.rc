#!/bin/bash

# Maven aliases
alias mvnp="mvn package -DskipTests"
alias mvncp="mvn clean package -DskipTests"
alias mvnc="mvn compile"
alias mvncc="mvn clean compile"
alias mvnct="mvn clean test"
alias mvndt="mvn dependency:tree"
alias mvnsc="mvn scala:cc"
alias mvntc="mvn test-compile"
alias mvni="mvn install -DskipTests"
alias mvnil="mvn install -DskipTests -Plocal"
alias mvnl=maven-install-local-sha
alias mvnci="mvn clean install -DskipTests"
alias mvs=maven-version-set

export m2="$HOME/.m2/repository"
export M="$m2"

if [ -z "$JAVA_HOME" -a -d "$HOME"/java8 ]; then
  export JAVA_HOME="$HOME"/java8
fi

if [ -z "$MAVEN_HOME" -a -d "$HOME"/apache-maven-3.3.1 ]; then
  export MAVEN_HOME="$HOME"/apache-maven-3.3.1
fi

if [ -z "$M2_HOME" ]; then
  if [ -d "$HOME"/apache-maven-3.3.1 ]; then
    export M2_HOME="$HOME"/apache-maven-3.3.1
  #elif [ -d "/usr/local/Cellar/maven/3.3.1" ]; then
    #export M2_HOME="/usr/local/Cellar/maven/3.3.1"
  fi
fi
