#!/usr/bin/env bash

# LESS options; source me from .bashrc!
export LESS=

# case-insensitive search
export LESS="$LESS -i"

# show bash colors
export LESS="$LESS -R"

# auto-number lines
#export LESS="$LESS -N"

# don't wrap lines
export LESS="$LESS -S"

# Exit if output is less than one page.
#export LESS="$LESS -F"

# Don't clear screen upon exit
#export LESS="$LESS -X"

alias le=smart-less
alias L=smart-less
