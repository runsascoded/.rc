#!/bin/sh

if [ $# -eq 0 ]; then
	echo "Usage: git new-branch <new branch name> [<tracking branch name=origin/master>]"
	exit 1
fi


new_branch_name=$1
if [ $# -gt 1 ]; then
	tracking_branch_name=$2
else
	tracking_branch_name="origin/master"
fi

git checkout -b $new_branch_name -t $tracking_branch_name

