#!/usr/bin/env bash

if [ $# -gt 1 ]; then
  fn="${@:(($#))}"
  args="${@:1:(($#-1))}"
  cat "$fn" | "$0" "$args"
  exit $?
fi

arg="$1"
shift
if ! [[ "$arg" =~ ^[0-9]+$ ]]; then
  if [[ "$arg" =~ ^[0-9]+%[0-9]+$ ]]; then
    num="${arg##*%}"
    offset="${arg%%%*}"
  else
    err "Usage: $0 <num>"
    exit 1
  fi
else
  num="$arg"
  offset=0
fi

let offset=$offset+1
if [ $offset -eq $num ]; then
  offset=0
fi

awk "NR%$num==$offset"

