#!/bin/bash

# PATH initialization
#append_to_path "/opt/google/depot_tools"
append_to_path "/usr/sbin"
append_to_path "/usr/include"
append_to_path "/sbin"
append_to_path "/sw/bin"
prepend_to_path "$HOME/bin"
prepend_to_path "$HOME/node/bin"
prepend_to_path "$HOME/sbin"
prepend_to_path "$HOME/sbt-0.13.8/sbt/bin"

append_to_path "/usr/local/ncbi/blast/bin"

append_to_path "$HOME/usr/local/bin"
append_to_path "$HOME/local/bin"
prepend_to_path "$HOME/.local/bin"
prepend_to_path "$HOME/py3/bin"

if [ -d "$HOME/.gem/ruby" ]; then
  for ruby_version in $(ls "$HOME"/.gem/ruby/); do
    append_to_path "$HOME/.gem/ruby/$ruby_version/bin"
  done
  alias giu="gem install --user-install"
  alias riu="gem install --user-install"
else
  debug "No ruby version found: $HOME/.gem/ruby"
fi

prepend_to_path "$s"
prepend_to_path "$s/arg-helpers"
prepend_to_path "$s/bash-helpers"
prepend_to_path "$s/brew-helpers"
prepend_to_path "$s/case-helpers"
prepend_to_path "$s/color-helpers"
prepend_to_path "$s/comm-helpers"
prepend_to_path "$s/daemon-scripts"
prepend_to_path "$s/datetime-helpers"
prepend_to_path "$s/diff-helpers"
prepend_to_path "$s/file-helpers"
prepend_to_path "$s/find-helpers"
prepend_to_path "$s/graphite-helpers"
prepend_to_path "$s/grep-helpers"
prepend_to_path "$s/hadoop"
prepend_to_path "$s/hammerlab"
prepend_to_path "$s/head-tail-helpers"
prepend_to_path "$s/histogram-helpers"
prepend_to_path "$s/image-helpers"
prepend_to_path "$s/intellij-helpers"
prepend_to_path "$s/jar-utils"
prepend_to_path "$s/java-helpers"
prepend_to_path "$s/js-helpers"
prepend_to_path "$s/ls-helpers"
prepend_to_path "$s/math-helpers"
prepend_to_path "$s/mvn"
prepend_to_path "$s/nav-helpers"
prepend_to_path "$s/net-helpers"
prepend_to_path "$s/numeric"
prepend_to_path "$s/py"
prepend_to_path "$s/py-helpers"
prepend_to_path "$s/returncode-helpers"
prepend_to_path "$s/rsync-helpers"
prepend_to_path "$s/samtools-helpers"
prepend_to_path "$s/sort-helpers"
prepend_to_path "$s/sinai"
prepend_to_path "$s/which-helpers"
prepend_to_path "$s/yarn"

append_to_path "$c/bedtools2/bin"
append_to_path "$HOME/mongo/bin"
append_to_path "$c/meteor"
append_to_path "$c/stack_traces"
append_to_path "$c/streaming-wc-l"
append_to_path "$c/yarn-logs-helpers"

prepend_to_path "$HOME/meld-1.8.6/bin"

prepend_to_path "$HOME/apache/bin"

if [ -e "/usr/local/Cellar" ]; then
  export hb=/usr/local/Cellar
fi

export ah="$s/arg-helpers"
export fh="$s/file-helpers"
export wh="$s/which-helpers"
export jh="$s/js-helpers"

alias j="js"

export db="$HOME/Dropbox"
export gd="$HOME/GoogleDrive"

# Only put `mld` on PATH if `meld` exists!
if whch meld; then
  append_to_path "$s/mld-dir";
fi

append_to_path "$HOME"  # Add $HOME to $PATH
prepend_to_path "/usr/local/bin"  # For brew
#append_to_path "$HOME/.rvm/bin"  # Add RVM to PATH for scripting
#append_to_path "/usr/local/heroku/bin"  # Added by the Heroku Toolbelt
#append_to_path "$HOME/play-2.1.0"
#append_to_path "$EC2_HOME/bin"

append_to_path "$HOME/Library/Python/2.7/bin"

if which greadlink &> /dev/null; then
  ln -sf $(which greadlink) $s/file-helpers/rl
else
  ln -sf $(which readlink) $s/file-helpers/rl
fi

alias jsh="jekyll serve -H 0.0.0.0"
